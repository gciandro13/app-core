{
  "$schema": "../../src/modules/json-schema.json#",
  "__$schema": "https://raw.githubusercontent.com/massimodipaolo/app-core/master/src/modules/json-schema.json",
  "extConfig": {
    "folder": "Extensions",
    "enableShutDownOnChange": false,
    "assemblies": {
      "Ws.Core.Extensions.StaticFiles": {
        "priority": 1,
        "options": {
          "paths": [
            {
              "headers": {
                "Cache-Control": "public,max-age=43200"
              }
            }
          ]
        }
      },
      "Ws.Core.Extensions.Cors": {
        "priority": 2
      },
      "Ws.Core.Extensions.Api": {
        "priority": 2,
        "options": {
          "serialization": {
            "nullValueHandling": "Ignore",
            "formatting": "Indented",
            "referenceLoopHandling": "Ignore"
          },
          "documentation": {
            "routePrefix": "swagger",
            "endpoints": [
              {
                "id": "public",
                "title": "public api",
                "version": "v1"
              },
              {
                "id": "admin",
                "title": "admin api",
                "version": "v1"
              }
            ],
            "xmlComments": {
              "fileName": "web.xml",
              "includeControllerComments": true
            }
          }
        }
      },
      "__Ws.Core.Extensions.Data.EF": {
        "priority": 19,
        "options": {
          "mappings": [
            {
              "name": "User",
              "table": "_User",
              "schema": "test",
              "IdColumnName": "Id",
              "properties": [
                {
                  "name": "Company",
                  "column": "_Company"
                },
                {
                  "name": "ToIgnore",
                  "ignore": true
                }
              ]
            }
          ]
        }
      },
      "Ws.Core.Extensions.Data.EF.SqlServer": {
        "priority": 20,
        "options": {
          "connections": [
            {
              "name": "default",
              "connectionString": "Server=.,14331;Database=Ws-Core;User Id=Ws-Core-Usr;Password=5876ee62-d2a9-4e61-8c3a-88d41f4543e8;MultipleActiveResultSets=true"
            }
          ]
        }
      },
      "Ws.Core.Extensions.Data.FileSystem": { "priority": 50 },
      "Ws.Core.Extensions.Data.Cache": {
        "priority": 4,
        "options": {
          "type": "Distributed",
          "redisOptions": {
            "configuration": "",
            "instanceName": "master"
          },
          "sqlOptions": {
            "connectionString": "",
            "schemaName": "dbo",
            "tableName": "Entry"
          },
          "entryExpirationInMinutes": {
            "fast": 10,
            "medium": 60,
            "slow": 240,
            "never": 1440
          }
        }
      },
      "__Ws.Core.Extensions.Data.Cache.Memcached": {
        "priority": 5,
        "options": {
          "client": {
            "servers": [
              {
                "address": "localhost",
                "port": 11211
              }
            ]
          },
          "entryExpirationInMinutes": {
            "fast": 10,
            "medium": 60,
            "slow": 240,
            "never": 1440
          }
        }
      }
    }
  }
}
